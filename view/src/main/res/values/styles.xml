<resources>

	<!-- Base application theme. -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name = "colorPrimary">@color/colorPrimary</item>
		<item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name = "colorAccent">@color/colorPrimary</item>
	</style>

	<style name = "MovieResultTitle" parent = "TextAppearance.MaterialComponents.Headline6">
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxLines">1</item>
	</style>

	<style name = "MovieResultDirector" parent = "TextAppearance.MaterialComponents.Subtitle1">
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxLines">1</item>
	</style>

	<style name = "MovieResultYear" parent = "TextAppearance.MaterialComponents.Tab">
		<item name = "android:fontFamily">sans-serif-light</item>
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxLines">1</item>
	</style>

	<style name = "MovieResultRating" parent = "TextAppearance.MaterialComponents.Chip">
		<item name = "android:fontFamily">sans-serif-condensed</item>
		<item name = "android:textSize">18sp</item>
	</style>

	<style name = "MovieDetailTechnicalInfo" parent = "TextAppearance.MaterialComponents.Caption">
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxLines">1</item>
		<item name = "android:textColor">@android:color/darker_gray</item>
	</style>

</resources>
