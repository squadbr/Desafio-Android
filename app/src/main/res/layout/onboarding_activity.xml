<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/movie_loading"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />
    
    <TextView
        android:id="@+id/informationText"
        style="@style/Label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dips"
        android:gravity="center"
        android:text="@string/information_onboarding"
        app:layout_constraintTop_toBottomOf="@+id/animationView"
        app:layout_constraintBottom_toTopOf="@+id/letsGoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/letsGoButton"
        style="@style/DefaultButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sixteen_dips"
        android:text="@string/lets_go"
        app:layout_constraintTop_toBottomOf="@+id/informationText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/informationText"
        app:layout_constraintEnd_toEndOf="@id/informationText" />

</android.support.constraint.ConstraintLayout>